<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4" style="margin-right: 60px;">
    <h1>Authors</h1>
    <%= link_to new_author_path, class: "btn btn-primary d-none d-md-inline-flex" do %>
      <i class="bi bi-plus-lg me-2"></i>Add Author
    <% end %>
  </div>

  <% if @authors.any? %>
    <div class="row g-4">
      <% @authors.each do |author| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100">
            <% if author.image.attached? %>
              <%= image_tag author.image, class: "card-img-top", style: "aspect-ratio: 4/3; object-fit: cover;" %>
            <% else %>
              <div class="bg-light d-flex align-items-center justify-content-center" style="aspect-ratio: 4/3;">
                <i class="bi bi-person text-muted" style="font-size: 4rem;"></i>
              </div>
            <% end %>
            
            <div class="card-body">
              <h5 class="card-title"><%= author.name %></h5>
              <p class="card-text text-muted small mb-2">
                <i class="bi bi-music-note me-1"></i><%= author.genre&.name || 'No genre' %> •
                <i class="bi bi-globe me-1"></i><%= author.country&.name || 'No country' %> •
                <i class="bi bi-collection me-1"></i><%= pluralize(author.albums.count, 'album') %>
              </p>
              <p class="card-text"><%= truncate(author.description, length: 100) %></p>
            </div>
            
            <div class="card-footer bg-transparent border-top-0">
              <div class="btn-group btn-group-sm w-100">
                <%= link_to edit_author_path(author), class: "btn btn-outline-primary" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= link_to author, 
                    class: "btn btn-outline-danger",
                    data: { turbo_method: :delete, 
                           turbo_confirm: "Are you sure? This will also delete all associated albums." } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="display-6 text-muted mb-4">
        <i class="bi bi-person-circle" style="font-size: 4rem;"></i>
      </div>
      <h3 class="text-muted mb-4">No authors found</h3>
      <%= link_to new_author_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-2"></i>Add your first author
      <% end %>
    </div>
  <% end %>
</div> 