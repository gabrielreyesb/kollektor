<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @title %></h1>
  </div>

  <div class="row g-3">
    <% @albums.each do |album| %>
      <div class="col-6 col-md-4 col-lg-3 col-xl-2">
        <div class="card h-100">
          <% if album.cover_image.attached? %>
            <%= image_tag album.cover_image, class: "card-img-top", loading: "lazy", style: "aspect-ratio: 1; object-fit: cover;" %>
          <% end %>
          <div class="card-body p-2">
            <div class="card-info" style="display: none;">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <h6 class="card-title mb-0"><%= album.name %></h6>
                <small class="text-white">
                  <i class="bi bi-headphones"></i>
                  <%= album.likes_count %>
                </small>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <p class="card-text mb-0">
                  <small class="text-muted">
                    <i class="bi bi-person"></i> <%= album.author.name %> â€¢ 
                    <i class="bi bi-calendar"></i> <%= album.year %>
                  </small>
                </p>
                <div>
                  <%= link_to album.wikipedia_url,
                      class: "btn btn-sm btn-secondary p-0 px-1 me-1",
                      target: "_blank",
                      data: { turbo: false } do %>
                    <i class="bi bi-book"></i>
                  <% end %>
                  <%= link_to album.youtube_music_url,
                      class: "btn btn-sm btn-danger p-0 px-1",
                      target: "_blank",
                      data: { turbo: false } do %>
                    <i class="bi bi-youtube"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 