<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Albums</h1>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
    <% @albums.each do |album| %>
      <div class="col">
        <div class="card h-100">
          <% if album.cover_image.attached? %>
            <%= image_tag album.cover_image, class: "card-img-top", loading: "lazy", style: "aspect-ratio: 1; object-fit: cover;" %>
          <% end %>
          <div class="card-info" style="display: none;">
            <div class="p-2">
              <div class="d-flex justify-content-between">
                <small class="text-muted"><%= album.genre.name %></small>
                <small class="text-muted"><%= album.year %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 