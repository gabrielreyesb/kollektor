<% if collection.next_page %>
  <div class="text-center mt-4">
    <%= link_to "Load More", 
        { page: collection.next_page }, 
        class: "d-none",
        data: { turbo_frame: "albums-pagination" } %>
    <div data-infinite-scroll-target="loading" class="spinner-border text-primary d-none" role="status">
      <span class="visually-hidden">Loading more albums...</span>
    </div>
  </div>
<% end %> 