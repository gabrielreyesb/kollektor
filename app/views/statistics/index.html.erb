<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-light">Collection Statistics</h1>
  </div>

  <div class="row g-4">
    <!-- Total Albums Card -->
    <div class="col-12">
      <div class="card bg-dark text-light border-secondary" style="max-width: 300px">
        <div class="card-body py-2">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title text-light mb-0">Total Albums</h5>
            <h2 class="display-6 mb-0"><%= @total_albums %></h2>
          </div>
        </div>
      </div>
    </div>

    <!-- Albums by Decade -->
    <div class="col-md-4">
      <div class="card bg-dark text-light border-secondary h-100">
        <div class="card-body">
          <h5 class="card-title text-light">Albums by Decade</h5>
          <div class="table-responsive">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th>Decade</th>
                  <th class="text-end">Count</th>
                </tr>
              </thead>
              <tbody>
                <% @albums_by_decade.each do |decade, count| %>
                  <tr>
                    <td><%= decade %></td>
                    <td class="text-end"><%= count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Albums by Genre -->
    <div class="col-md-4">
      <div class="card bg-dark text-light border-secondary h-100">
        <div class="card-body">
          <h5 class="card-title text-light">Albums by Genre</h5>
          <div class="table-responsive">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th>Genre</th>
                  <th class="text-end">Count</th>
                </tr>
              </thead>
              <tbody>
                <% @albums_by_genre.each do |genre, count| %>
                  <tr>
                    <td><%= genre %></td>
                    <td class="text-end"><%= count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Albums by Country -->
    <div class="col-md-4">
      <div class="card bg-dark text-light border-secondary h-100">
        <div class="card-body">
          <h5 class="card-title text-light">Albums by Country</h5>
          <div class="table-responsive">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th>Country</th>
                  <th class="text-end">Count</th>
                </tr>
              </thead>
              <tbody>
                <% @albums_by_country.each do |country, count| %>
                  <tr>
                    <td><%= country %></td>
                    <td class="text-end"><%= count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Genres by Likes -->
    <div class="col-md-4">
      <div class="card bg-dark text-light border-secondary h-100">
        <div class="card-body">
          <h5 class="card-title text-light">
            <i class="bi bi-heart-fill text-danger me-2"></i>Genres by Likes
          </h5>
          <div class="table-responsive">
            <table class="table table-dark table-hover">
              <thead>
                <tr>
                  <th>Genre</th>
                  <th class="text-end">Likes</th>
                </tr>
              </thead>
              <tbody>
                <% if @genres_by_likes.any? %>
                  <% @genres_by_likes.each do |genre, total_likes| %>
                    <tr>
                      <td><%= genre %></td>
                      <td class="text-end">
                        <span class="badge bg-danger"><%= total_likes %></span>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="2" class="text-center text-muted">No likes yet</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 