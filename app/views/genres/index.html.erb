<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Genres</h1>
    <div class="d-flex gap-2">
      <%= form_with(url: genres_path, method: :get, class: "d-flex gap-2") do |f| %>
        <%= f.search_field :search, 
            value: params[:search],
            class: "form-control",
            placeholder: "Search genres...",
            "aria-label": "Search" %>
        <%= f.submit "Search", class: "btn btn-secondary" %>
      <% end %>
      <%= link_to new_genre_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-2"></i>Add genre
      <% end %>
    </div>
  </div>

  <% if @genres.any? %>
    <div class="card table-responsive">
      <table class="table table-hover table-dark mb-0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Albums</th>
            <th>Authors</th>
            <th width="150">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle"><%= genre.name %></td>
              <td class="align-middle"><%= truncate(genre.description, length: 100) %></td>
              <td class="align-middle"><%= genre.albums.count %></td>
              <td class="align-middle"><%= genre.authors.count %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_genre_path(genre), class: "btn btn-outline-primary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to genre, 
                      class: "btn btn-outline-danger",
                      data: { turbo_method: :delete, 
                             turbo_confirm: "Are you sure? This will also delete all associated authors and albums." } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="display-6 text-muted mb-4">
        <i class="bi bi-music-note-list" style="font-size: 4rem;"></i>
      </div>
      <h3 class="text-muted mb-4">No genres found</h3>
      <%= link_to new_genre_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-2"></i>Add your first genre
      <% end %>
    </div>
  <% end %>
</div> 