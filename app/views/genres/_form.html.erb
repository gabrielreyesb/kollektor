<%= form_with(model: genre, class: "mb-4") do |form| %>
  <% if genre.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h2>
      <ul>
        <% genre.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <%= form.hidden_field :collection_type_id, value: genre.collection_type_id %>

