<%= form_with(model: actor, html: { multipart: true }) do |form| %>
  <% if actor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>
      <ul>
        <% actor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_area :bio, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :photo, class: "form-label" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back to Actors", actors_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %> 