<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Manage Actors</h1>
    <%= link_to "Add New Actor", new_actor_path, class: "btn btn-primary" %>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @actors.each do |actor| %>
      <div class="col">
        <div class="card h-100">
          <% if actor.photo.attached? %>
            <%= image_tag actor.photo, class: "card-img-top", style: "aspect-ratio: 1 / 1; object-fit: cover;" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="aspect-ratio: 1 / 1;">
              <i class="bi bi-person-fill text-muted" style="font-size: 3rem;"></i>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= actor.name %></h5>
            <p class="card-text text-muted"><%= truncate(actor.bio, length: 80) %></p>
          </div>
          <div class="card-footer">
            <div class="btn-group btn-group-sm">
              <%= link_to "Edit", edit_actor_path(actor), class: "btn btn-outline-primary" %>
              <%= link_to "Delete", actor, class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
