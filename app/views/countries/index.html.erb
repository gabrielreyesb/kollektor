<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Countries</h1>
    <%= link_to new_country_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-2"></i>Add country
    <% end %>
  </div>

  <% if @countries.any? %>
    <div class="card table-responsive">
      <table class="table table-hover table-dark mb-0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Authors</th>
            <th width="150">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @countries.each do |country| %>
            <tr>
              <td class="align-middle"><%= country.name %></td>
              <td class="align-middle"><%= country.code %></td>
              <td class="align-middle"><%= country.authors.count %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_country_path(country), class: "btn btn-outline-primary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to country, 
                      class: "btn btn-outline-danger",
                      data: { turbo_method: :delete, 
                             turbo_confirm: "Are you sure? This will remove the country from associated authors." } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-5">
      <div class="display-6 text-muted mb-4">
        <i class="bi bi-globe" style="font-size: 4rem;"></i>
      </div>
      <h3 class="text-muted mb-4">No countries found</h3>
      <%= link_to new_country_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg me-2"></i>Add your first country
      <% end %>
    </div>
  <% end %>
</div> 