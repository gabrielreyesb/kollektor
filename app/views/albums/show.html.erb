<div class="container-fluid">
  <div class="row g-5">
    <!-- Left column for cover image -->
    <div class="col-md-5 col-lg-4 album-cover-container">
      <% if @album.cover_image.attached? %>
        <%= image_tag @album.cover_image, class: "img-fluid rounded shadow-lg", style: "aspect-ratio: 1; object-fit: cover;" %>
      <% else %>
        <div class="d-flex align-items-center justify-content-center bg-dark rounded shadow-lg" style="aspect-ratio: 1;">
          <i class="bi bi-disc text-muted" style="font-size: 6rem;"></i>
        </div>
      <% end %>
    </div>

    <!-- Right column for album details -->
    <div class="col-md-7 col-lg-8">
      <h1 class="display-5 mb-3"><%= @album.name %></h1>
      
      <!-- Author and Year -->
      <h3 class="text-muted mb-4">
        <%= @album.author.name %> â€¢ <%= @album.year %>
      </h3>

      <!-- Genre -->
      <p class="lead mb-2">
        <span class="badge bg-secondary fs-6"><%= @album.genre.name %></span>
      </p>

      <!-- Likes Count -->
      <p class="lead mb-4">
        <span class="badge bg-dark border border-secondary fs-6 text-white">
          <i class="bi bi-headphones me-2"></i>
          <%= @album.likes_count %> Likes
        </span>
      </p>

      <!-- Description -->
      <% if @album.description.present? %>
        <h5 class="mb-3">About this album</h5>
        <p class="text-muted"><%= @album.description %></p>
      <% end %>

      <!-- Action Buttons -->
      <div class="d-flex gap-2 mt-5">
        <%= link_to 'Back', albums_path, class: 'btn btn-secondary' %>
        <%= link_to 'Edit', edit_album_path(@album), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
  @media (max-width: 767.98px) {
    .album-cover-container {
      margin-top: 6rem;
    }
  }
</style>
<% end %> 