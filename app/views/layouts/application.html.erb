<!DOCTYPE html>
<html>
  <head>
    <title>Kollektor</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  </head>

  <body>
    <div class="d-flex" data-controller="sidebar">
      <!-- Sidebar -->
      <nav class="sidebar" data-sidebar-target="sidebar">
        <div style="padding: 12px; text-align: center; border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
          <%= image_tag "logo.png", style: "height: 32px; width: auto; display: inline-block;" %>
        </div>
        <hr>

        <!-- Main Navigation -->
        <div class="sidebar-content">
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to root_path, 
                  class: "nav-link", 
                  style: "
                    color: white; 
                    padding: 0.6rem 0.75rem; 
                    display: block;
                    text-decoration: none;
                    #{current_page?(root_path) ? 'background: rgba(255, 255, 255, 0.2);' : ''}" do %>
                <i class="bi bi-house-door me-2"></i>Home
              <% end %>
            </li>
            <li style="width: 100%; padding: 0.6rem 0.75rem;">
              <div class="form-group" data-controller="filter">
                <%= select_tag :genre_id, 
                    options_for_select([
                      ["All Genres", ""], 
                      *(@filtered_genres || Genre.order(:name)).map { |g| [g.name, g.id] }
                    ], params[:genre_id]),
                    class: "form-select bg-transparent text-white border-white",
                    style: "option { color: black; }",
                    data: { 
                      action: "change->filter#change",
                      filter_type_value: "genre_id"
                    } %>
              </div>
            </li>
            <li style="width: 100%; padding: 0.6rem 0.75rem;">
              <div class="form-group" data-controller="filter">
                <%= select_tag :author_id,
                    options_for_select([
                      ["All Authors", ""], 
                      *(@filtered_authors || Author.order(:name)).map { |a| [a.name, a.id] }
                    ], params[:author_id]),
                    class: "form-select bg-transparent text-white border-white",
                    style: "option { color: black; }",
                    data: { 
                      action: "change->filter#change",
                      filter_type_value: "author_id"
                    } %>
              </div>
            </li>
            <li style="width: 100%; padding: 0.6rem 0.75rem;">
              <div class="form-group" data-controller="filter">
                <%= select_tag :album_id,
                    options_for_select([
                      ["All Albums", ""], 
                      *(@filtered_albums || Album.order(:name)).map { |a| [a.name, a.id] }
                    ], params[:album_id]),
                    class: "form-select bg-transparent text-white border-white",
                    style: "option { color: black; }",
                    data: { 
                      action: "change->filter#change",
                      filter_type_value: "album_id"
                    } %>
              </div>
            </li>
            <li style="width: 100%; padding: 0.6rem 0.75rem;">
              <div class="form-check form-switch">
                <input class="form-check-input bg-white" 
                       type="checkbox" 
                       id="showCardInfo" 
                       checked
                       data-controller="display"
                       data-action="display#toggle">
                <label class="form-check-label text-white" for="showCardInfo">
                  Card information
                </label>
              </div>
            </li>
          </ul>
        </div>

        <!-- Management Section at Bottom -->
        <div class="sidebar-footer">
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to genres_path, 
                  class: "nav-link", 
                  style: "
                    color: white; 
                    padding: 0.6rem 0.75rem; 
                    display: block;
                    text-decoration: none;
                    #{current_page?(genres_path) ? 'background: rgba(255, 255, 255, 0.2);' : ''}" do %>
                <i class="bi bi-music-note-list me-2"></i>Manage Genres
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to authors_path, 
                  class: "nav-link", 
                  style: "
                    color: white; 
                    padding: 0.6rem 0.75rem; 
                    display: block;
                    text-decoration: none;
                    #{current_page?(authors_path) ? 'background: rgba(255, 255, 255, 0.2);' : ''}" do %>
                <i class="bi bi-person me-2"></i>Manage Authors
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to albums_path, 
                  class: "nav-link", 
                  style: "
                    color: white; 
                    padding: 0.6rem 0.75rem; 
                    display: block;
                    text-decoration: none;
                    #{current_page?(albums_path) ? 'background: rgba(255, 255, 255, 0.2);' : ''}" do %>
                <i class="bi bi-disc me-2"></i>Manage Albums
              <% end %>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Overlay -->
      <div class="sidebar-overlay" 
           data-sidebar-target="overlay" 
           data-action="click->sidebar#toggle"
           role="button"
           tabindex="0"></div>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Navbar -->
        <nav class="navbar navbar-dark bg-primary fixed-top d-md-none">
          <div class="container-fluid">
            <button class="navbar-toggler border-0" 
                    type="button" 
                    aria-label="Toggle navigation"
                    data-action="sidebar#toggle">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-brand">
              <%= image_tag "logo.png", style: "height: 24px; width: auto;" %>
            </div>
          </div>
        </nav>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
